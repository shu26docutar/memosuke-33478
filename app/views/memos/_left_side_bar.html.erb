<%
=begin%>
 <div class="rooms">
    <div class="add-btn">
        <%= link_to new_room_path do %>
        <span class='material-icons'>add</span>
        <% end %>
    </div>
</div> 
<%
=end%>

<%
=begin%>
 <div class="rooms">
  <div id="room-form">
    <%= render partial: 'rooms/form', locals: { room: @room } %>
  </div>

  <div class="room">
    <div id="room">
      <%= render "rooms/room", {rooms: @rooms} %>
    </div>  
  </div>
</div> 
<%
=end%>


<div class="side-bar-header">
  <div class="header-name">
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
</div>

<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>